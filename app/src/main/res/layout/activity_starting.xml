<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <!-- Shape Covering the Top Area -->
    <RelativeLayout
        android:id="@+id/topShapeCoverOrange"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginTop="-50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/top_shape_orange" />

    <RelativeLayout
        android:id="@+id/topShapeCover"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="-50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/top_shape" />

    <!-- Clock Container LinearLayout with Date -->
    <androidx.cardview.widget.CardView
        android:id="@+id/clockCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/border"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:elevation="20dp"
        android:layout_marginRight="40dp">

    <LinearLayout
        android:id="@+id/clockContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date TextView -->
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday, 12 August 2024"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal" />

        <!-- Clock TextView -->
        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="04:40"
            android:gravity="center"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:elevation="16dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:elevation="20dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:translationZ="10dp"
            android:id="@+id/registerButtonContainerCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edge_square_polos"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">

        <!-- Register Face Data Button -->
        <RelativeLayout
            android:id="@+id/registerButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/registerImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/register" />
            <TextView
                android:id="@+id/registerButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/registerImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Register Face Data"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
        </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <!-- Regist In and Regist Out Buttons in a Row -->


        <androidx.cardview.widget.CardView
            android:translationZ="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edge_square_polos"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/registInButtonContainerCard"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edge_square_ungu"
                android:elevation="20dp"
                app:cardElevation="20dp">
            <RelativeLayout
                android:id="@+id/registInButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/registInImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/check_in" />

                <Button
                    android:id="@+id/checkInButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/registInImage"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button2"
                    android:fontFamily=""
                    android:text="Regist In"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="normal" />

            </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <RelativeLayout
                android:id="@+id/registOutButtonContainer"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/registOutImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/check_out" />

                <Button
                    android:id="@+id/checkOutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/registOutImage"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button3"
                    android:fontFamily=""
                    android:text="Regist Out"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="normal" />
            </RelativeLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:translationZ="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edge_square_hijau"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">
        <!-- Check Attendance Button -->
        <RelativeLayout
            android:id="@+id/checkAttendanceButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/checkAttendanceImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/attendance" />

            <TextView
                android:id="@+id/checkAttendanceButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkAttendanceImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:elevation="8dp"
                android:text="Check Attendance"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:translationZ="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edge_square_hijau"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">
            <!-- Check Attendance Button -->

            <RelativeLayout
                android:id="@+id/setDirectoryButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/setDirectoryImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/folder" />

                <TextView
                    android:id="@+id/setDirectory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setDirectoryImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:elevation="8dp"
                    android:text="Set Directory"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="-200dp"
        android:background="@drawable/top_shape_orange" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="-200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/top_shape" />
</RelativeLayout>
