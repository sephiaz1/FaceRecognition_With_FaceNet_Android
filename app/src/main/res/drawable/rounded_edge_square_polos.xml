<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Shadow layer -->
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <corners android:radius="16dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <!-- Background layer with rounded corners -->
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:gradientRadius="100dp"
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF" />
            <corners android:radius="16dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>

    </item>
</layer-list>
